# Maintainer: <your-name> <<your-email>>
pkgname=macolint
pkgver=0.1.0
pkgrel=1
pkgdesc="A terminal-first snippet manager with encrypted local storage"
arch=('x86_64' 'aarch64')
url="https://github.com/<user>/macolint"
license=('MIT')
depends=('glibc')
makedepends=('rust' 'cargo')
source=("$pkgname-$pkgver.tar.gz::https://github.com/<user>/macolint/archive/v$pkgver.tar.gz")
sha256sums=('')  # Update with actual SHA256 after first release

build() {
  cd "$pkgname-$pkgver"
  cargo build --release --locked
}

check() {
  cd "$pkgname-$pkgver"
  cargo test --release --locked
}

package() {
  cd "$pkgname-$pkgver"
  install -Dm755 "target/release/snip" "$pkgdir/usr/bin/snip"
  install -Dm644 "README.md" "$pkgdir/usr/share/doc/$pkgname/README.md"
  install -Dm644 "LICENSE" "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

